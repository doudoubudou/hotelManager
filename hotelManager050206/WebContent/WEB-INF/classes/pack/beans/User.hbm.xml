<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="pack.beans">
	<!-- User类映射到user_inf表 -->
	<class name="User" table="user_inf">
		<id name="id" column="user_id">
			<generator class="identity"/>
		</id>
		<property name="userName" 
			type="string" column="user_userName"/>
		<property name="password"
			type="string" column="user_password"/>
	 	<property name="name"
			type="string" column="user_name"/>
		<property name="age"
			type="int" column="user_age"/>
		<property name="birthday"
			type="java.util.Date" column="user_birthday"/>
		<property name="sex"
			type="boolean" column="user_sex"/>
		<property name="height"
			type="int" column="user_height"/>
		<property name="weight"
			type="int" column="user_weight"/>
		<property name="education" 
			type="int" column="user_education"/>
		<property name="profession"
			type="int" column="user_profession"/>
		<property name="proDegree"
			type="int" column="user_proDegree"/>
		<property name="province"
			type="string" column="user_province"/>
		<property name="city"
			type="string" column="user_city"/>
		<property name="image"
			type="string" column="user_image"/>
		<property name="phone"
			type="string" column="user_phone"/>
		<property name="email"
			type="string" column="user_email"/>
		<property name="declaration"
			type="string" column="user_declaration"/>
		<property name="sexOrientation"
			type="boolean" column="user_sexOrientation"/>
		<property name="valid"
			type="boolean" column="user_valid"/>
		<property name="flag"
			type="int" column="user_flag"/>   
	</class>
</hibernate-mapping>