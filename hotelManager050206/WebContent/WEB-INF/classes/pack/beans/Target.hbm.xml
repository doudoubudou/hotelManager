<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="pack.beans">
	<!-- target类映射到target_inf表 -->
	<class name="Target" table="target_inf">
		<id name="userId" column="user_id">
			<generator class="assigned"/>
		</id>
		<property name="minAge" 
			type="int" column="target_minAge"/>
		<property name="maxAge"
			type="int" column="target_maxAge"/>
		<property name="minHeight"
			type="int" column="target_minHeight"/>
		<property name="maxHeight"
			type="int" column="target_maxHeight"/>
		<property name="minWeight"
			type="int" column="target_minWeight"/>
		<property name="maxWeight" 
			type="int" column="target_maxWeight"/>
		<property name="education"
			type="int" column="target_education"/>
		<property name="profession"
			type="string" column="target_profession"/>
		<property name="province"
			type="string" column="target_province"/>
		<property name="city"
			type="string" column="target_city"/>
		<property name="valid"
			type="boolean" column="target_valid"/>
		<property name="flag"
			type="int" column="target_flag"/>
	</class>
</hibernate-mapping>